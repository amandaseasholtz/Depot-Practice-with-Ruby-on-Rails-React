<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<% if flash[:alert] %>
  <aside class="notice"><%= flash[:alert] %></aside>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<ul class="catalog">	<ul class="catalog">
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url.url) %>
      <h2><%= product.title %></h2>
      <p>
      <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <div class="price">
          <%= number_to_currency(product.price) %>
        </div>
        <% if current_account.nil? or current_account.accountable_type == "Buyer"%>
          <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
        <% end %>
        <p>added to cart <i><b><%= render(product) %></b></i></p>
      </div>
    </li>
  <% end %>
</ul>
